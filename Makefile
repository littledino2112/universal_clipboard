.PHONY: help release

help: ## Show this help
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | sort | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-15s\033[0m %s\n", $$1, $$2}'

# Release
release: ## Auto-version, update changelog, tag and push to trigger release pipeline
	@./scripts/release.sh
